        If colName = "iLastPlayed" AndAlso e.RowIndex >= 0 Then
            oldStatus = GetStatus()
            Cursor = Cursors.Hand
            SetStatus(Master.eLang.GetString(885, "Change Watched Status"))
        ElseIf (
