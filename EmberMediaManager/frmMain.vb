                If dresult.NeedsDBUpdate_TV.Count > 0 Then
                    If dresult.NeedsDBUpdate_TV.Contains(-1) Then
                        fTaskManager.AddTask(New TaskManager.TaskItem(TaskManager.TaskItem.TaskType.Scan) With {
