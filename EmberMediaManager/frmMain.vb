                        If Master.eSettings.MovieThemeAnyEnabled AndAlso Addons.Instance.ScraperWithCapabilityAnyEnabled_Theme_Movie() Then
                            ScrapeFor = Master.eLang.GetString(1125, "Theme Only")
                        End If
